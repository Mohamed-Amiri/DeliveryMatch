	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Register Driver",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"firstName\": \"Jean\",\n  \"lastName\": \"Dupont\",\n  \"email\": \"jean.dupont@example.com\",\n  \"password\": \"password123\",\n  \"phone\": \"+33123456789\",\n  \"role\": \"DRIVER\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/auth/register",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "register"]
						}
					}
				},
				{
					"name": "Login Driver",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
