		{
			"name": "Trip Management",
			"item": [
				{
					"name": "Create Trip",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{driverToken}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"departureLocation\": \"Paris, France\",\n  \"destinationLocation\": \"Lyon, France\",\n  \"intermediateStops\": [\"Dijon, France\"],\n  \"departureTime\": \"2024-01-15T08:00:00\",\n  \"estimatedArrivalTime\": \"2024-01-15T14:00:00\",\n  \"maxLength\": 200.0,\n  \"maxWidth\": 150.0,\n  \"maxHeight\": 100.0,\n  \"maxWeight\": 500.0,\n  \"availableCapacity\": 1000.0,\n  \"acceptedCargoTypes\": [\"Electronics\", \"Clothing\", \"Books\"],\n  \"description\": \"Regular trip from Paris to Lyon with stop in Dijon\",\n  \"price\": 2.50\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/driver/trips",
							"host": ["{{baseUrl}}"],
							"path": ["api", "driver", "trips"]
						}
					}
				},
				{
					"name": "Get Driver Trips",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{driverToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/driver/trips?page=0&size=10",
							"host": ["{{baseUrl}}"],
							"path": ["api", "driver", "trips"],
							"query": [
								{
									"key": "page",
									"value": "0"
								},
								{
									"key": "size",
									"value": "10"
								}
							]
						}
					}
				},
				{
					"name": "Get Active Trips",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{driverToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/driver/trips/active",
							"host": ["{{baseUrl}}"],
							"path": ["api", "driver", "trips", "active"]
						}
					}
				},
				{
					"name": "Get Trip by ID",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{driverToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/driver/trips/{{tripId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "driver", "trips", "{{tripId}}"]
						}
					}
				},
				{
					"name": "Update Trip Status",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{driverToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/driver/trips/{{tripId}}/status?status=IN_PROGRESS",
							"host": ["{{baseUrl}}"],
							"path": ["api", "driver", "trips", "{{tripId}}", "status"],
							"query": [
								{
									"key": "status",
									"value": "IN_PROGRESS"
								}
							]
						}
					}
				},
				{
					"name": "Delete Trip",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{driverToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/driver/trips/{{tripId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "driver", "trips", "{{tripId}}"]
						}
					}
				}
			]
		},
